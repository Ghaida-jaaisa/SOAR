@model List<Course>?

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewBag.CategoryName Category</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .title {
            text-align: center;
            margin-bottom: 40px;
        }

            .title h2 {
                font-size: 36px;
                margin-bottom: 10px;
            }

            .title p {
                font-size: 16px;
                color: #555;
            }

            .title button {
                padding: 10px 20px;
                background-color: #3498db;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                margin-top: 20px;
            }

                .title button a {
                    color: white;
                    text-decoration: none;
                }

                .title button:hover {
                    background-color: #2980b9;
                }

        .courses {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .course {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 300px;
            width: 100%;
            margin: 0 10px 20px;
            text-align: center;
            padding: 15px;
            box-sizing: border-box;
        }

            .course img.cover {
                width: 100%;
                height: auto;
                border-bottom: 1px solid #ddd;
            }

        .information {
            padding: 10px;
        }

            .information .course-level {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 10px;
                font-size: 14px;
                color: #777;
            }

            .information .location {
                display: flex;
                justify-content: space-between;
                align-items: center;
                gap: 10px;
            }

                .information .location img {
                    width: 16px;
                    height: 16px;
                }

        .course h3 {
            font-size: 24px;
            margin: 10px 0;
        }

        .course p {
            font-size: 14px;
            color: #555;
            margin: 10px 0;
            text-align: left;
        }

        .course button {
            padding: 10px 20px;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }

            .course button:hover {
                background-color: #2980b9;
            }
    </style>
</head>

<body>
    <section class="Our-courses" id="courses">
        <div class="container">
            <div class="title">
                <h2><span class="category">@ViewBag.CategoryName</span> Courses</h2>
                <p>
                    Lorem ipsum dolor sit amet consectetur. Tempus tincidunt etiam eget elit id imperdiet et. Cras eu sit
                    dignissim lorem nibh et. Ac cum eget habitasse in velit fringilla feugiat senectus in.
                </p>
                <button><a asp-controller="Home" asp-action="IndexLogin">Home</a></button>
            </div>

            <div class="courses">
                @foreach (var course in @Model)
                {
                    <div class="course">
                        <img src="~/img/coursepages/2.jpg" alt="Cover Image" class="cover">
                        <div class="information">
                            <div class="course-level">
                                <div class="location">
                                    <span>@course.Duration Weeks</span>
                                    <span>@course.Price</span>
                                    <span>
                                        <img src="~/img/coursepages/map-pin-solid.svg" alt="location">
                                        <span id="location">@course.Location</span>
                                    </span>
                                </div>
                            </div>
                            <p>By @course.ComapnyName</p>
                        </div>
                        <h3>@course.CourseName</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit. Earum quidem, minima, rem nam laborum
                            architecto id maxime rerum sed corporis harum eos maiores aspernatur illo.
                        </p>
                        <button asp-controller="Home" asp-action="IndexLogin" onclick="alert('Best Wishes')">Get it Now</button>
                    </div>
                }
            </div>
        </div>
    </section>
</body>

</html>
